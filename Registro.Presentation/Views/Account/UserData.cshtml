@using Microsoft.AspNetCore.Http
@using Newtonsoft.Json
@using Registro.Presentation.Models

@inject Microsoft.AspNetCore.Http.IHttpContextAccessor HttpContextAcessor

@{
    //ler o conteúdo json gravado na sessão
    var json = HttpContextAcessor.HttpContext.Session.GetString("usuario");

    //deserializar o conteudo json
    var usuario = JsonConvert.DeserializeObject<UserIdentityModel>(json);
}

<h5>Dados do usário:</h5>
<hr/>

<div class="mb-2">
    ID do usuário: <strong>@usuario.Id</strong>
</div>

<div class="mb-2">
    Nome do usuário: <strong>@usuario.Nome</strong>
</div>

<div class="mb-2">
    Email do usuário: <strong>@usuario.Email</strong>
</div>

<div class="mb-2">
    Data / Hora do acesso ao sistema: <strong>@usuario.DataHoraAcesso</strong>
</div>

<div class="mb-2">
    Cadastrado em: <strong>@usuario.DataInclusao</strong>
</div>