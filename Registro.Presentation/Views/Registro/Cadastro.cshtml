@* definindo a classe de modelo de dados utilizada nesta página *@
@model Registro.Presentation.Models.PessoaCadastroViewModel

<h5>Cadastro de Registro</h5>
<p>
    Preenche os campos para criar um registro
</p>
<hr/>

@* declarando o formulário *@
@using (Html.BeginForm())
{
    <div class="row mb-3">
        <div class="col-md-4">
            <label>Nome Completo:</label>
            @Html.TextBoxFor(model => model.Nome,
                new { @class = "form-control" })
            <span class="text-danger">
                @Html.ValidationMessageFor(model => model.Nome)
            </span>
        </div>
        <div class="col-md-2">
            <label>CPF:</label>
            @Html.TextBoxFor(model => model.Cpf,
                new { @class = "form-control" })
                <span class="text-danger">
                    @Html.ValidationMessageFor(model => model.Cpf)
                </span>
        </div>
        <div class="col-md-2">
            <label>RG:</label>
            @Html.TextBoxFor(model => model.Rg,
                new { @class = "form-control" })
            <span class="text-danger">
                @Html.ValidationMessageFor(model => model.Rg)
            </span>
        </div>
    </div>

    <div class="row mb-3">
        <div class="col-md-2">
            <label>Data de Nascimento:</label>
            @Html.TextBoxFor(model => model.DataNascimento,
                new { @type = "date", @class = "form-control" })
            <span class="text-danger">
                @Html.ValidationMessageFor(model => model.DataNascimento)
            </span>
        </div>

        <div class="col-md-2">
            <label>Sexo:</label>
            <br/>
            @Html.RadioButtonFor(model => model.Sexo, "1")
                <label>Masculino</label><br/>
            @Html.RadioButtonFor(model => model.Sexo, "2")
                <label>Feminino</label><br/>
            <span class="text-danger">
                @Html.ValidationMessageFor(model => model.Sexo)
            </span>
        </div>
    </div>

    <div class="row mb-3">
        <div class="col-md-12">
            <input type="submit" value="Realizar Cadastro"class="btn btn-success"/>
        </div>
    </div>

    <h5>
        @TempData["Mensagem"]
    </h5>
}